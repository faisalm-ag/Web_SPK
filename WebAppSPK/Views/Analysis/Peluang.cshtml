@using WebAppSPK.ViewModels
@model AnalysisStepVM

@{
    ViewData["Title"] = "Analisis Peluang Industri - " + Model.Title;
}

<style>
    :root {
        --accent-pink: #f472b6;
        --accent-cyan: #22d3ee;
        --bg-dark: #020617;
    }

    /* Stepper UI */
    .stepper-wrapper { display: flex; justify-content: space-between; margin-bottom: 3rem; }
    .stepper-item { position: relative; display: flex; flex-direction: column; align-items: center; flex: 1; }
    .stepper-item::before { position: absolute; content: ""; border-bottom: 2px solid rgba(255,255,255,0.1); width: 100%; top: 20px; left: -50%; z-index: 2; }
    .stepper-item:first-child::before { content: none; }
    .step-counter { position: relative; z-index: 5; display: flex; justify-content: center; align-items: center; width: 40px; height: 40px; border-radius: 50%; background: #1a1a1a; border: 2px solid rgba(255,255,255,0.1); color: white; font-weight: bold; margin-bottom: 10px; }
    .stepper-item.completed .step-counter { background: var(--accent-cyan); border-color: var(--accent-cyan); color: #0f172a; }
    .stepper-item.active .step-counter { background: var(--accent-pink); border-color: var(--accent-pink); box-shadow: 0 0 15px rgba(244, 114, 182, 0.4); }
    .step-name { color: rgba(255,255,255,0.5); font-size: 0.7rem; text-transform: uppercase; letter-spacing: 1px; }

    /* Matrix Loader */
    .loading-overlay { 
        position: fixed; top: 0; left: 0; width: 100%; height: 100%; 
        background: var(--bg-dark); z-index: 9999; display: flex; 
        flex-direction: column; justify-content: center; align-items: center; 
        transition: opacity 0.5s ease; 
    }
    .matrix-text { font-family: 'Courier New', monospace; color: var(--accent-pink); font-size: 1.2rem; text-shadow: 0 0 10px var(--accent-pink); }
    .scan-line { width: 300px; height: 2px; background: var(--accent-pink); box-shadow: 0 0 15px var(--accent-pink); position: relative; overflow: hidden; margin: 20px 0; }
    .scan-line::after { content: ""; position: absolute; width: 100%; height: 100%; background: white; left: -100%; animation: scan 1.5s infinite; }
    @@keyframes scan { 0% { left: -100%; } 100% { left: 100%; } }

    /* Cards */
    .spk-card { 
        background: linear-gradient(145deg, rgba(30, 41, 59, 0.7), rgba(15, 23, 42, 0.8)) !important; 
        border: 1px solid rgba(244, 114, 182, 0.1); 
        border-radius: 24px; 
        backdrop-filter: blur(10px); 
    }
    
    .btn-cyber-next { 
        background: var(--accent-pink); 
        border: none; 
        border-radius: 12px; 
        color: white; 
        padding: 1rem;
        font-weight: 800;
        transition: all 0.3s ease; 
        text-transform: uppercase;
        letter-spacing: 1px;
        text-decoration: none;
        display: inline-block;
        text-align: center;
    }
    .btn-cyber-next:hover { 
        background: #fff; 
        color: var(--accent-pink);
        transform: translateY(-3px); 
        box-shadow: 0 10px 20px rgba(244, 114, 182, 0.3); 
    }
    
    .chart-container {
        padding: 15px;
        background: rgba(15, 23, 42, 0.3);
        border-radius: 16px;
        border: 1px solid rgba(255,255,255,0.02);
        height: 550px; /* Ukuran grafik lebih besar */
        position: relative;
    }

    .insight-badge {
        background: rgba(244, 114, 182, 0.1);
        color: var(--accent-pink);
        padding: 4px 12px;
        border-radius: 6px;
        font-size: 0.7rem;
        font-weight: bold;
        border: 1px solid rgba(244, 114, 182, 0.2);
    }
</style>

<div id="loader" class="loading-overlay">
    <div class="matrix-text mb-2 text-uppercase">ANALYZING INDUSTRIAL VOLUME...</div>
    <div class="scan-line"></div>
    <div class="text-white-50 small">Mapping Career Safety Net for @TempData.Peek("UserNama")</div>
</div>

<div class="container py-5">
    <div class="row justify-content-center mb-5">
        <div class="col-md-10 col-lg-8">
            <div class="stepper-wrapper">
                <div class="stepper-item completed"><div class="step-counter"><i class="bi bi-check"></i></div><div class="step-name">Profil</div></div>
                <div class="stepper-item completed"><div class="step-counter"><i class="bi bi-check"></i></div><div class="step-name">Gaji & Biaya</div></div>
                <div class="stepper-item active"><div class="step-counter">3</div><div class="step-name">Peluang</div></div>
                <div class="stepper-item"><div class="step-counter">4</div><div class="step-name">Hasil</div></div>
            </div>
        </div>
    </div>

    <div class="text-center mb-5">
        <div class="d-inline-flex align-items-center gap-2 px-3 py-1 rounded-pill bg-white bg-opacity-10 border border-white border-opacity-10 mb-3">
            <span class="insight-badge">FAKTOR C3</span>
            <span class="text-white-50">|</span>
            <span class="text-white small fw-bold">MARKET ABSORPTION</span>
        </div>
        <h2 class="display-5 fw-800 text-white">Densitas <span style="color: var(--accent-pink)">Unit Usaha</span></h2>
        <p class="text-white-50 mx-auto fs-5" style="max-width: 700px;">
            Volume ekosistem industri di <strong class="text-white">@Model.UserLocationChoice</strong> dibandingkan dengan wilayah lainnya.
        </p>
    </div>

    <div class="row g-4 justify-content-center">
        <div class="col-lg-8">
            <div class="spk-card p-4 shadow-lg h-100">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div>
                        <h5 class="text-white fw-bold m-0"><i class="bi bi-graph-up me-2" style="color:var(--accent-pink)"></i>Volume Distribusi Industri</h5>
                        <p class="text-white-50 small mb-0">Visualisasi kepadatan unit usaha (Bawah ke Atas)</p>
                    </div>
                    <span class="badge bg-dark border border-secondary" style="color:var(--accent-pink)">Area Analysis</span>
                </div>
                
                <div class="chart-container">
                    <canvas id="opportunityChart"></canvas>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="spk-card p-4 border-start border-4 h-100" style="border-color: var(--accent-pink) !important;">
                <h5 class="text-white fw-bold mb-4"><i class="bi bi-cpu me-2"></i>Smart Insight</h5>
                
                <div class="mb-4">
                    <p class="text-white-50 lh-lg italic" style="font-size: 0.95rem;">
                        "@Model.DeepInsight"
                    </p>
                </div>

                <div class="p-3 rounded-4 mb-4" style="background: rgba(244, 114, 182, 0.05); border: 1px solid rgba(244, 114, 182, 0.2);">
                    <h6 class="fw-bold small mb-2 text-white"><i class="bi bi-shield-check me-2" style="color:var(--accent-pink)"></i>Career Resilience</h6>
                    <p class="text-white-50 mb-0" style="font-size: 0.8rem; line-height: 1.5;">
                        Tingginya volume unit usaha mencerminkan jaring pengaman karir yang lebih kuat dan pilihan transisi pekerjaan yang lebih banyak.
                    </p>
                </div>

                <div class="mt-auto pt-4">
                    <div class="p-3 rounded-3 mb-4 bg-dark bg-opacity-50 border border-secondary border-opacity-25">
                        <div class="d-flex justify-content-between small mb-2">
                            <span class="text-white-50">Kalkulasi:</span>
                            <span class="text-white fw-bold">Benefit (MAX)</span>
                        </div>
                        <div class="d-flex justify-content-between small">
                            <span class="text-white-50">Processing:</span>
                            <span style="color:var(--accent-cyan)">@Model.DataProcessingTime</span>
                        </div>
                    </div>

                    <a asp-controller="Analysis" asp-action="Step" asp-route-id="Lingkungan" class="btn btn-cyber-next w-100 shadow-sm">
                        Lanjut ke Lingkungan <i class="bi bi-arrow-right ms-2"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Loader handling
        window.addEventListener('load', function() {
            setTimeout(() => {
                const loader = document.getElementById('loader');
                if(loader) {
                    loader.style.opacity = '0';
                    setTimeout(() => loader.style.display = 'none', 500);
                }
            }, 800);
        });

        const ctx = document.getElementById('opportunityChart').getContext('2d');
        const labels = @Html.Raw(Json.Serialize(Model.ChartLabels));
        const dataValues = @Html.Raw(Json.Serialize(Model.ChartValues));
        const userLoc = "@Model.UserLocationChoice".toLowerCase();

        // Menciptakan gradien untuk area chart
        const pinkFillGradient = ctx.createLinearGradient(0, 0, 0, 400);
        pinkFillGradient.addColorStop(0, 'rgba(244, 114, 182, 0.4)');
        pinkFillGradient.addColorStop(1, 'rgba(244, 114, 182, 0.0)');

        new Chart(ctx, {
            type: 'line', // Area Chart menggunakan tipe 'line'
            data: {
                labels: labels,
                datasets: [{
                    label: 'Unit Usaha',
                    data: dataValues,
                    fill: true, // Mengaktifkan arsiran di bawah garis
                    backgroundColor: pinkFillGradient,
                    borderColor: '#f472b6',
                    borderWidth: 3,
                    tension: 0.4, // Membuat garis menjadi halus/melengkung
                    pointBackgroundColor: labels.map(l => l.toLowerCase().includes(userLoc) ? '#fff' : '#f472b6'),
                    pointBorderColor: '#f472b6',
                    pointRadius: labels.map(l => l.toLowerCase().includes(userLoc) ? 8 : 4),
                    pointHoverRadius: 10,
                    pointBorderWidth: 2
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { display: false },
                    tooltip: {
                        backgroundColor: '#0f172a',
                        titleColor: '#f472b6',
                        callbacks: {
                            label: (context) => ` ${context.parsed.y.toLocaleString()} Unit Usaha`
                        }
                    }
                },
                scales: {
                    x: {
                        grid: { display: false },
                        ticks: { 
                            color: (c) => labels[c.index] && labels[c.index].toLowerCase().includes(userLoc) ? '#f472b6' : '#64748b',
                            font: { 
                                size: 11,
                                weight: (c) => labels[c.index] && labels[c.index].toLowerCase().includes(userLoc) ? 'bold' : 'normal'
                            }
                        }
                    },
                    y: {
                        beginAtZero: true,
                        grid: { color: 'rgba(255,255,255,0.05)' },
                        ticks: { 
                            color: '#94a3b8',
                            callback: (value) => value.toLocaleString()
                        }
                    }
                }
            }
        });
    </script>
}