@using WebAppSPK.ViewModels
@model AnalysisStepVM

@{
    ViewData["Title"] = "Analisis Peluang Industri";
    // Warna tema khusus untuk Peluang (Cyan)
    var themeColor = "#22d3ee"; 
}

<style>
    /* Stepper UI */
    .stepper-wrapper { display: flex; justify-content: space-between; margin-bottom: 3rem; }
    .stepper-item { position: relative; display: flex; flex-direction: column; align-items: center; flex: 1; }
    .stepper-item::before { position: absolute; content: ""; border-bottom: 2px solid rgba(255,255,255,0.1); width: 100%; top: 20px; left: -50%; z-index: 2; }
    .stepper-item:first-child::before { content: none; }
    .step-counter { position: relative; z-index: 5; display: flex; justify-content: center; align-items: center; width: 40px; height: 40px; border-radius: 50%; background: #1a1a1a; border: 2px solid rgba(255,255,255,0.1); color: white; font-weight: bold; margin-bottom: 10px; }
    .stepper-item.completed .step-counter { background: @themeColor; border-color: @themeColor; color: #0f172a; }
    .stepper-item.active .step-counter { background: #ec4899; border-color: #ec4899; box-shadow: 0 0 15px rgba(236, 72, 153, 0.4); }
    .step-name { color: rgba(255,255,255,0.5); font-size: 0.7rem; text-transform: uppercase; letter-spacing: 1px; }

    /* Matrix Loader */
    .loading-overlay { position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: #020617; z-index: 9999; display: flex; flex-direction: column; justify-content: center; align-items: center; transition: opacity 0.5s ease; }
    .matrix-text { font-family: 'Courier New', monospace; color: @themeColor; font-size: 1.2rem; text-shadow: 0 0 10px @themeColor; }
    .scan-line { width: 300px; height: 2px; background: @themeColor; box-shadow: 0 0 15px @themeColor; position: relative; overflow: hidden; margin: 20px 0; }
    .scan-line::after { content: ""; position: absolute; width: 100%; height: 100%; background: white; left: -100%; animation: scan 1.5s infinite; }
    @@keyframes scan { 0% { left: -100%; } 100% { left: 100%; } }

    .spk-card { background: rgba(30,41,59,0.5) !important; border: 1px solid rgba(255,255,255,0.05); border-radius: 24px; backdrop-filter: blur(10px); }
    .btn-cyber-next { background: @themeColor; border: none; border-radius: 12px; color: #0f172a; transition: all 0.3s ease; }
    .btn-cyber-next:hover { background: #fff; transform: translateY(-2px); box-shadow: 0 5px 15px @themeColor; }
    
    .chart-container {
        padding: 10px;
        background: rgba(15, 23, 42, 0.3);
        border-radius: 16px;
        border: 1px solid rgba(255,255,255,0.02);
    }
</style>

<div id="loader" class="loading-overlay">
    <div class="matrix-text mb-2 text-uppercase">SCANNING INDUSTRIAL DENSITY...</div>
    <div class="scan-line"></div>
    <div class="text-white-50 small">Mapping opportunities for: @TempData["UserNama"]</div>
</div>

<div class="container py-5">
    <div class="row justify-content-center mb-5">
        <div class="col-md-8 col-lg-6">
            <div class="stepper-wrapper">
                <div class="stepper-item completed"><div class="step-counter"><i class="bi bi-check"></i></div><div class="step-name">Biodata</div></div>
                <div class="stepper-item completed"><div class="step-counter"><i class="bi bi-check"></i></div><div class="step-name">Gaji & CPI</div></div>
                <div class="stepper-item active"><div class="step-counter">3</div><div class="step-name">Peluang</div></div>
                <div class="stepper-item"><div class="step-counter">4</div><div class="step-name">Hasil</div></div>
            </div>
        </div>
    </div>

    <div class="text-center mb-5">
        <div class="d-inline-flex align-items-center gap-2 px-3 py-1 rounded-pill bg-white bg-opacity-10 border border-white border-opacity-10 mb-3">
            <span class="fw-bold" style="color: @themeColor">ANALISIS 03</span>
            <span class="text-white-50">|</span>
            <span class="text-white small">KRITERIA BENEFIT</span>
        </div>
        <h2 class="fw-800 text-white">Peluang <span style="color: @themeColor">Penyerapan Industri</span></h2>
        <p class="text-white-50 mx-auto" style="max-width: 650px;">
            @Model.Narration
        </p>
    </div>

    <div class="row g-4 justify-content-center">
        <div class="col-lg-8">
            <div class="spk-card p-4 shadow-lg h-100">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div>
                        <h5 class="text-white fw-bold m-0"><i class="bi bi-bar-chart-steps me-2 text-info"></i>Industrial Density Comparison</h5>
                        <p class="text-white-50 small mb-0">Wilayah dengan jumlah unit usaha terbanyak (Skala Nasional)</p>
                    </div>
                    <span class="badge" style="background: @themeColor; color: #0f172a">Data e-Stat 2026</span>
                </div>
                <div class="chart-container" style="height: 480px; position: relative;">
                    <canvas id="opportunityChart"></canvas>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="spk-card p-4 border-start border-4 h-100" style="border-color: @themeColor !important;">
                <h5 class="text-white fw-bold mb-4">Deep Insight</h5>
                
                <div class="mb-4">
                    <p class="small text-white-50 text-justify" style="line-height: 1.6;">
                        @Model.DeepInsight
                    </p>
                </div>

                <div class="p-3 rounded-4 mb-4" style="background: rgba(34, 211, 238, 0.05); border: 1px solid rgba(34, 211, 238, 0.2);">
                    <h6 class="fw-bold small mb-2" style="color: @themeColor"><i class="bi bi-shield-lock-fill me-2"></i>Career Safety Net</h6>
                    <p class="text-white-50 mb-0" style="font-size: 0.75rem; line-height: 1.5;">
                        Prefektur dengan densitas industri tinggi (seperti Tokyo/Osaka) memberikan Anda <strong>opsi relokasi lebih luas</strong> jika kontrak kerja utama berakhir.
                    </p>
                </div>

                <div class="mt-auto pt-4">
                    <div class="text-white-50 small mb-3">Sistem telah memproses data dalam: <span class="text-white fw-bold">@Model.DataProcessingTime</span></div>
                    <a asp-controller="Analysis" asp-action="@Model.NextStepAction" class="btn btn-cyber-next w-100 py-3 fw-bold shadow-sm">
                        Lanjut ke Tahap Terakhir <i class="bi bi-arrow-right ms-2"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Loader Fade-out
        window.addEventListener('load', function() {
            setTimeout(() => {
                const loader = document.getElementById('loader');
                if(loader) {
                    loader.style.opacity = '0';
                    setTimeout(() => loader.style.display = 'none', 500);
                }
            }, 800);
        });

        const ctx = document.getElementById('opportunityChart').getContext('2d');
        
        // Data from Model
        const labels = @Html.Raw(Json.Serialize(Model.ChartLabels));
        const dataValues = @Html.Raw(Json.Serialize(Model.ChartValues));
        const userLocation = "@Model.UserLocationChoice";

        // Create Gradients
        const blueGradient = ctx.createLinearGradient(0, 0, 400, 0);
        blueGradient.addColorStop(0, 'rgba(34, 211, 238, 0.8)');
        blueGradient.addColorStop(1, 'rgba(34, 211, 238, 0.2)');

        const highlightGradient = ctx.createLinearGradient(0, 0, 400, 0);
        highlightGradient.addColorStop(0, '#f472b6'); // Pink untuk pilihan user agar kontras
        highlightGradient.addColorStop(1, 'rgba(244, 114, 182, 0.3)');

        // Background Colors Logic
        const bgColors = labels.map(label => {
            return label.toLowerCase() === userLocation.toLowerCase() 
                ? highlightGradient 
                : blueGradient;
        });

        const borderColors = labels.map(label => {
            return label.toLowerCase() === userLocation.toLowerCase() 
                ? '#f472b6' 
                : '#22d3ee';
        });

        new Chart(ctx, {
            type: 'bar', // Ubah ke Bar Chart
            data: {
                labels: labels,
                datasets: [{
                    label: 'Jumlah Unit Usaha',
                    data: dataValues,
                    backgroundColor: bgColors,
                    borderColor: borderColors,
                    borderWidth: 1,
                    borderRadius: 8, // Membuat batang agak bulat di ujung
                    barThickness: 25,
                }]
            },
            options: {
                indexAxis: 'y', // Membuat Bar menjadi Horizontal
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { display: false },
                    tooltip: {
                        backgroundColor: '#0f172a',
                        titleColor: '#22d3ee',
                        bodyColor: '#fff',
                        padding: 12,
                        cornerRadius: 10,
                        callbacks: {
                            label: function(context) {
                                return ` ${context.raw.toLocaleString()} Perusahaan`;
                            }
                        }
                    }
                },
                scales: {
                    x: {
                        grid: { color: 'rgba(255,255,255,0.05)', drawBorder: false },
                        ticks: { color: '#64748b', font: { size: 10 } }
                    },
                    y: {
                        grid: { display: false },
                        ticks: { 
                            color: function(context) {
                                const label = labels[context.index];
                                return label.toLowerCase() === userLocation.toLowerCase() ? '#fff' : '#94a3b8';
                            },
                            font: { 
                                size: 12, 
                                weight: function(context) {
                                    const label = labels[context.index];
                                    return label.toLowerCase() === userLocation.toLowerCase() ? 'bold' : 'normal';
                                }
                            }
                        }
                    }
                }
            }
        });
    </script>
}