@using WebAppSPK.ViewModels
@model AnalysisStepVM

@{
    ViewData["Title"] = "Analisis Lingkungan - " + Model.Title;
}

<style>
    :root {
        --accent-pink: #f472b6;
        --accent-indigo: #818cf8;
        --bg-dark: #020617;
    }

    /* Stepper UI */
    .stepper-wrapper { display: flex; justify-content: space-between; margin-bottom: 3rem; }
    .stepper-item { position: relative; display: flex; flex-direction: column; align-items: center; flex: 1; }
    .stepper-item::before { position: absolute; content: ""; border-bottom: 2px solid rgba(255,255,255,0.1); width: 100%; top: 20px; left: -50%; z-index: 2; }
    .stepper-item:first-child::before { content: none; }
    .step-counter { position: relative; z-index: 5; display: flex; justify-content: center; align-items: center; width: 40px; height: 40px; border-radius: 50%; background: #1a1a1a; border: 2px solid rgba(255,255,255,0.1); color: white; font-weight: bold; margin-bottom: 10px; }
    
    .stepper-item.completed .step-counter { background: var(--accent-indigo); border-color: var(--accent-indigo); color: white; }
    .stepper-item.active .step-counter { background: var(--accent-pink); border-color: var(--accent-pink); box-shadow: 0 0 15px rgba(244, 114, 182, 0.4); }
    .step-name { color: rgba(255,255,255,0.5); font-size: 0.7rem; text-transform: uppercase; letter-spacing: 1px; }

    /* Matrix Loader */
    .loading-overlay { position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: var(--bg-dark); z-index: 9999; display: flex; flex-direction: column; justify-content: center; align-items: center; transition: opacity 0.5s ease; }
    .matrix-text { font-family: 'Courier New', monospace; color: var(--accent-pink); font-size: 1.2rem; text-shadow: 0 0 10px var(--accent-pink); }
    .scan-line { width: 300px; height: 2px; background: var(--accent-pink); box-shadow: 0 0 15px var(--accent-pink); position: relative; overflow: hidden; margin: 20px 0; }
    .scan-line::after { content: ""; position: absolute; width: 100%; height: 100%; background: white; left: -100%; animation: scan 1.5s infinite; }
    @@keyframes scan { 0% { left: -100%; } 100% { left: 100%; } }

    /* SPK Card Styling */
    .spk-card { 
        background: linear-gradient(145deg, rgba(30, 41, 59, 0.7), rgba(15, 23, 42, 0.8)) !important; 
        border: 1px solid rgba(244, 114, 182, 0.1); 
        border-radius: 24px; 
        backdrop-filter: blur(10px); 
    }
    
    .btn-cyber-final { 
        background: var(--accent-pink); 
        border: none; 
        border-radius: 12px; 
        color: white; 
        font-weight: 800;
        transition: all 0.3s ease; 
        text-transform: uppercase; 
        letter-spacing: 1px; 
        text-decoration: none;
        display: inline-block;
        text-align: center;
    }
    .btn-cyber-final:hover { 
        background: white;
        color: var(--accent-pink);
        transform: translateY(-3px); 
        box-shadow: 0 10px 25px rgba(244, 114, 182, 0.4); 
    }
    
    .stat-box { 
        background: rgba(15, 23, 42, 0.6); 
        border-radius: 20px; 
        padding: 1.5rem; 
        border: 1px solid rgba(255,255,255,0.05); 
    }

    .chart-container {
        position: relative;
        padding: 20px;
        height: 500px;
    }

    .insight-tag {
        background: rgba(244, 114, 182, 0.1);
        color: var(--accent-pink);
        padding: 4px 12px;
        border-radius: 6px;
        font-size: 0.7rem;
        font-weight: bold;
        border: 1px solid rgba(244, 114, 182, 0.2);
    }
</style>

<div id="loader" class="loading-overlay">
    <div class="matrix-text mb-2 text-uppercase">KALIBRASI DATA DEMOGRAFI...</div>
    <div class="scan-line"></div>
    <div class="text-white-50 small">Memetakan Social Landscape untuk @TempData.Peek("UserNama")</div>
</div>

<div class="container py-5">
    <div class="row justify-content-center mb-5">
        <div class="col-md-10 col-lg-8">
            <div class="stepper-wrapper">
                <div class="stepper-item completed"><div class="step-counter"><i class="bi bi-check"></i></div><div class="step-name">Profil</div></div>
                <div class="stepper-item completed"><div class="step-counter"><i class="bi bi-check"></i></div><div class="step-name">Ekonomi</div></div>
                <div class="stepper-item completed"><div class="step-counter"><i class="bi bi-check"></i></div><div class="step-name">Peluang</div></div>
                <div class="stepper-item active"><div class="step-counter">4</div><div class="step-name">Lingkungan</div></div>
                <div class="stepper-item"><div class="step-counter">5</div><div class="step-name">Hasil</div></div>
            </div>
        </div>
    </div>

    <div class="text-center mb-5">
        <div class="d-inline-flex align-items-center gap-2 px-3 py-1 rounded-pill bg-white bg-opacity-10 border border-white border-opacity-10 mb-3">
            <span class="insight-tag">ANALISIS 04</span>
            <span class="text-white-50">|</span>
            <span class="text-white small fw-bold">SOCIAL LANDSCAPE</span>
        </div>
        <h2 class="display-5 fw-800 text-white">Profil <span style="color: var(--accent-pink)">Demografis</span></h2>
        <p class="text-white-50 mx-auto fs-5" style="max-width: 700px;">
            Menganalisis skala populasi dan infrastruktur sosial di <strong class="text-white">@Model.UserLocationChoice</strong>.
        </p>
    </div>

    <div class="row g-4">
        <div class="col-lg-4">
            <div class="spk-card p-4 h-100 d-flex flex-column">
                <h5 class="text-white fw-bold mb-4"><i class="bi bi-geo-alt me-2" style="color: var(--accent-pink)"></i>Konteks Sosial</h5>
                
                <div class="stat-box mb-4">
                    <span class="text-white-50 small d-block mb-1">Populasi Wilayah:</span>
                    <h3 class="fw-800 m-0 text-white">
                        @Model.CurrentValue.ToString("N0")
                        <span class="fs-6 fw-normal text-white-50"> ribu jiwa</span>
                    </h3>
                </div>

                <div class="mb-4">
                    <p class="text-white-50 lh-lg italic" style="font-size: 0.95rem;">
                        "@Model.DeepInsight"
                    </p>
                </div>

                <div class="p-3 rounded-4 mb-4" style="background: rgba(244, 114, 182, 0.05); border-left: 4px solid var(--accent-pink);">
                    <h6 class="fw-bold small mb-1 text-white">Analisis Urbanisasi</h6>
                    <p class="text-white-50 mb-0" style="font-size: 0.8rem;">
                        Skala populasi berbanding lurus dengan kelengkapan fasilitas publik dan kemudahan akses transportasi.
                    </p>
                </div>

                <div class="mt-auto">
                    <div class="d-flex justify-content-between mb-3 small">
                        <span class="text-white-50">Algorithm: <strong>SAW</strong></span>
                        <span class="text-pink fw-bold" style="color:var(--accent-pink)">Benefit (MAX)</span>
                    </div>
                    <a asp-controller="Analysis" asp-action="Step" asp-route-id="Final" class="btn btn-cyber-final w-100 py-3">
                        Lihat Rekomendasi Akhir <i class="bi bi-cpu-fill ms-2"></i>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <div class="spk-card p-4 h-100">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div>
                        <h5 class="text-white fw-bold m-0"><i class="bi bi-radar me-2" style="color: var(--accent-pink)"></i>Demographic Radar Map</h5>
                        <p class="text-white-50 small mb-0">Perbandingan kepadatan antar prefektur dalam dataset</p>
                    </div>
                    <span class="badge bg-dark border border-secondary text-white-50">e-Stat 2026</span>
                </div>
                
                <div class="chart-container">
                    <canvas id="populationRadar"></canvas>
                </div>
                
                <div class="mt-3 text-center">
                    <p class="text-white-50 small"><i class="bi bi-info-circle me-1"></i> Area radar yang lebih luas menunjukkan wilayah dengan infrastruktur sosial yang lebih padat.</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        window.addEventListener('load', function() {
            setTimeout(() => {
                const loader = document.getElementById('loader');
                if(loader) {
                    loader.style.opacity = '0';
                    setTimeout(() => loader.style.display = 'none', 500);
                }
            }, 800);
        });

        const ctx = document.getElementById('populationRadar').getContext('2d');
        const labels = @Html.Raw(Json.Serialize(Model.ChartLabels));
        const dataValues = @Html.Raw(Json.Serialize(Model.ChartValues));
        const userLoc = "@Model.UserLocationChoice".toLowerCase();

        new Chart(ctx, {
            type: 'radar',
            data: {
                labels: labels,
                datasets: [{
                    label: 'Populasi',
                    data: dataValues,
                    fill: true,
                    backgroundColor: 'rgba(244, 114, 182, 0.2)', // Pink fill
                    borderColor: '#f472b6', // Pink border
                    borderWidth: 3,
                    pointBackgroundColor: labels.map(l => l.toLowerCase().includes(userLoc) ? '#fff' : '#f472b6'),
                    pointBorderColor: '#f472b6',
                    pointRadius: labels.map(l => l.toLowerCase().includes(userLoc) ? 7 : 3),
                    pointHoverRadius: 9,
                    tension: 0.1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    r: {
                        angleLines: { color: 'rgba(255,255,255,0.1)' },
                        grid: { color: 'rgba(255,255,255,0.08)' },
                        pointLabels: {
                            color: '#94a3b8',
                            font: { size: 11, weight: '500' }
                        },
                        ticks: { display: false },
                        suggestedMin: 0
                    }
                },
                plugins: {
                    legend: { display: false },
                    tooltip: {
                        backgroundColor: '#0f172a',
                        titleColor: '#f472b6',
                        callbacks: {
                            label: (c) => ` Populasi: ${c.raw.toLocaleString()} ribu jiwa`
                        }
                    }
                }
            }
        });
    </script>
}