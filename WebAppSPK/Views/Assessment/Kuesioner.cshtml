@model List<WebAppSPK.ViewModels.QuestionVM>
@{
    ViewData["Title"] = "Assessment - STARTJAP";
}

<style>
    :root {
        --primary-bg: #020617;
        --accent-pink: #FF1493;
        --accent-pink-hover: #db127d;
        --glass-border: rgba(255,255,255,0.1);
        --glass-bg: rgba(255,255,255,0.03);
        --pink-glow: rgba(255,20,147,0.25);
    }

    body {
        background: var(--primary-bg);
        color: #fff;
        font-family: 'Plus Jakarta Sans', sans-serif;
        overflow-x: hidden;
    }

    /* ================= PROGRESS BAR ================= */
    .sticky-progress {
        position: fixed;
        top: 0; left: 0;
        width: 100%;
        height: 4px;
        background: rgba(255,255,255,0.06);
        z-index: 2000;
    }

    #progressFill {
        height: 100%;
        width: 0%;
        background: linear-gradient(90deg, var(--accent-pink), #6366f1);
        box-shadow: 0 0 20px var(--accent-pink);
        transition: width 0.4s ease;
    }

    /* ================= STEPPER ================= */
    .stepper-wrapper {
        display: flex;
        justify-content: space-between;
        margin-bottom: 3rem;
        position: relative;
    }

    .stepper-item {
        position: relative;
        flex: 1;
        display: flex;
        flex-direction: column;
        align-items: center;
        z-index: 1;
    }

    .stepper-item::before {
        content: "";
        position: absolute;
        top: 20px;
        left: -50%;
        width: 100%;
        border-bottom: 2px solid var(--glass-border);
        z-index: -1;
    }

    .stepper-item:first-child::before {
        display: none;
    }

    .step-counter {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: var(--glass-bg);
        backdrop-filter: blur(10px);
        border: 1px solid var(--glass-border);
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 800;
        transition: all 0.4s cubic-bezier(0.175,0.885,0.32,1.275);
    }

    .stepper-item.active .step-counter {
        background: var(--accent-pink);
        border-color: var(--accent-pink);
        box-shadow: 0 0 20px var(--accent-pink);
    }

    .stepper-item.completed .step-counter {
        background: #059669;
        border-color: #059669;
    }

    .step-name {
        margin-top: 8px;
        font-size: 0.65rem;
        letter-spacing: 0.15em;
        text-transform: uppercase;
        color: rgba(255,255,255,0.5);
    }

    /* ================= SECTION DIVIDER ================= */
    .section-divider {
        border-left: 4px solid var(--accent-pink);
        padding-left: 16px;
        margin: 60px 0 30px;
        letter-spacing: 0.2em;
        text-transform: uppercase;
        font-size: 1rem;
    }

    /* ================= QUESTION CARD ================= */
    .question-card {
        background: var(--glass-bg);
        backdrop-filter: blur(15px);
        border-radius: 24px;
        border: 1px solid var(--glass-border);
        padding: 32px;
        position: relative;
        display: flex;
        flex-direction: column;
        height: 100%;
        transition: all 0.4s cubic-bezier(0.175,0.885,0.32,1.275);
    }

    .question-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 16px 48px var(--pink-glow);
        border-color: var(--accent-pink);
    }

    .question-number {
        position: absolute;
        top: -20px;
        right: 20px;
        font-size: 4.5rem;
        font-weight: 900;
        color: rgba(255,255,255,0.04);
        pointer-events: none;
    }

    .card-category {
        font-size: 0.65rem;
        font-weight: 800;
        letter-spacing: 0.18em;
        color: var(--accent-pink);
        margin-bottom: 10px;
        display: block;
        text-transform: uppercase;
    }

    /* ================= LIKERT ================= */
    .likert-container {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 16px;
        margin-top: auto;
        padding-top: 30px;
    }

    .likert-label {
        width: 80px;
        font-size: 0.6rem;
        text-align: center;
        text-transform: uppercase;
        letter-spacing: 0.15em;
        color: rgba(255,255,255,0.45);
    }

    .likert-options {
        display: flex;
        gap: 10px;
    }

    .likert-btn {
        width: 44px;
        height: 44px;
        border-radius: 50%;
        border: 1px solid var(--glass-border);
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        font-weight: 700;
        background: rgba(255,255,255,0.02);
        transition: all 0.3s cubic-bezier(0.175,0.885,0.32,1.275);
    }

    .likert-btn:hover {
        transform: translateY(-3px);
        border-color: var(--accent-pink);
    }

    .btn-check:checked + .likert-btn {
        background: var(--accent-pink);
        border-color: var(--accent-pink);
        box-shadow: 0 0 20px var(--accent-pink);
        transform: scale(1.15);
    }

    /* ================= SUBMIT ================= */
    .btn-generate {
        background: linear-gradient(135deg, var(--accent-pink), #6366f1);
        color: #fff;
        border: none;
        border-radius: 999px;
        font-weight: 800;
        padding: 18px 48px;
        letter-spacing: 0.15em;
        text-transform: uppercase;
        transition: all 0.4s cubic-bezier(0.175,0.885,0.32,1.275);
        box-shadow: 0 12px 36px rgba(255,20,147,0.35);
    }

    .btn-generate:hover {
        transform: translateY(-5px);
        box-shadow: 0 20px 50px rgba(255,20,147,0.5);
        color: #fff;
    }
</style>

<div class="sticky-progress">
    <div id="progressFill"></div>
</div>

<div class="container py-5">

    <!-- ================= HEADER ================= -->
    <div class="row justify-content-center mb-5">
        <div class="col-md-8 text-center">
            <div class="stepper-wrapper mb-4">
                <div class="stepper-item completed">
                    <div class="step-counter"><i class="bi bi-check-lg"></i></div>
                    <div class="step-name">Biodata</div>
                </div>
                <div class="stepper-item active">
                    <div class="step-counter">2</div>
                    <div class="step-name">Kuesioner</div>
                </div>
                <div class="stepper-item">
                    <div class="step-counter">3</div>
                    <div class="step-name">Analisis</div>
                </div>
                <div class="stepper-item">
                    <div class="step-counter">4</div>
                    <div class="step-name">Hasil</div>
                </div>
            </div>

            <img src="~/images/logo-startjap.png" style="width:50px" class="mb-3" />
            <h1 class="fw-bold text-white mb-2">
                Penilaian <span style="color:var(--accent-pink)">Kesiapan Karir</span>
            </h1>
            <p class="text-white-50">
                Silakan isi preferensi Anda di bawah ini. Pastikan tidak ada poin yang terlewat.
            </p>
        </div>
    </div>

    <form asp-action="Kuesioner" method="post" id="kuesionerForm">
        @Html.AntiForgeryToken()

        <h4 class="section-divider text-white fw-bold">Tahap 01: Prioritas Ekonomi & Lingkungan</h4>
        <div class="row g-4">
            @for (int i = 0; i < 4; i++)
            {
                <div class="col-md-6 d-flex">
                    <input type="hidden" name="[@i].Index" value="@Model[i].Index" />
                    <input type="hidden" name="[@i].Category" value="@Model[i].Category" />
                    <input type="hidden" name="[@i].Text" value="@Model[i].Text" />

                    <div class="question-card">
                        <div class="question-number">0@(i + 1)</div>
                        <span class="card-category">KRITERIA: @Model[i].Category</span>
                        <p class="fs-5 fw-bold">@Model[i].Text</p>

                        <div class="likert-container">
                            <div class="likert-label">Tidak Penting</div>
                            <div class="likert-options">
                                @for (int s = 1; s <= 5; s++)
                                {
                                    var radioId = $"q_{i}_{s}";
                                    <input type="radio" name="[@i].SelectedScore" id="@radioId" value="@s" class="btn-check q-input" required />
                                    <label class="likert-btn" for="@radioId">@s</label>
                                }
                            </div>
                            <div class="likert-label">Sangat Penting</div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <h4 class="section-divider text-white fw-bold">Tahap 02: Resiliensi & Adaptasi Budaya</h4>
        <div class="row g-4">
            @for (int i = 4; i < Model.Count; i++)
            {
                <div class="col-md-6 d-flex">
                    <input type="hidden" name="[@i].Index" value="@Model[i].Index" />
                    <input type="hidden" name="[@i].Category" value="@Model[i].Category" />
                    <input type="hidden" name="[@i].Text" value="@Model[i].Text" />

                    <div class="question-card">
                        <div class="question-number">@(i + 1)</div>
                        <span class="card-category">ASPEK: @Model[i].Category</span>
                        <p class="fs-5 fw-bold">@Model[i].Text</p>

                        <div class="likert-container">
                            <div class="likert-label">Tidak Siap</div>
                            <div class="likert-options">
                                @for (int s = 1; s <= 5; s++)
                                {
                                    var radioId = $"q_{i}_{s}";
                                    <input type="radio" name="[@i].SelectedScore" id="@radioId" value="@s" class="btn-check q-input" required />
                                    <label class="likert-btn" for="@radioId">@s</label>
                                }
                            </div>
                            <div class="likert-label">Sangat Siap</div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="text-center mt-5 mb-5">
            <button type="submit" class="btn-generate">
                Jalankan Algoritma SAW <i class="bi bi-cpu-fill ms-2"></i>
            </button>
            <p class="text-white-50 small mt-3">
                <i class="bi bi-info-circle me-1"></i>
                Data akan diproses menggunakan data riil e-Stat Japan.
            </p>
        </div>
    </form>
</div>

<script>
    function updateProgress() {
        const total = @Model.Count;
        const answered = document.querySelectorAll('input[type="radio"]:checked').length;
        const percent = (answered / total) * 100;
        document.getElementById('progressFill').style.width = percent + "%";
    }

    document.querySelectorAll('.q-input').forEach(input => {
        input.addEventListener('change', function () {
            const card = this.closest('.question-card');
            card.style.borderColor = "var(--accent-pink)";
            card.style.background = "rgba(255,20,147,0.05)";
            updateProgress();
        });
    });

    window.onload = updateProgress;
</script>
