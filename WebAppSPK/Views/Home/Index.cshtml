@{
    ViewData["Title"] = "Dashboard SPK - Magang Jepang";
}

<style>
    :root {
        --primary-bg: #020617;
        --accent-pink: #FF1493;
        --card-glass: rgba(255, 255, 255, 0.03);
        --border-glass: rgba(255, 255, 255, 0.1);
        --pink-glow: rgba(255, 20, 147, 0.15);
    }

    body {
        background-color: var(--primary-bg);
        font-family: 'Plus Jakarta Sans', sans-serif;
    }

    /* ================= HERO TITLE ================= */
    .hero-title {
        font-size: clamp(2.8rem, 5vw, 4.8rem);
        line-height: 1.1;
        font-weight: 800;
        letter-spacing: -0.02em;
        margin-bottom: 1rem;
    }

    .hero-title .white {
        color: #ffffff;
    }

    .hero-title .gradient {
        background: linear-gradient(135deg, #FF1493, #6366f1);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    /* ================= GLASS CARD SYSTEM ================= */
    .glass-card {
        background: var(--card-glass);
        backdrop-filter: blur(15px);
        -webkit-backdrop-filter: blur(15px);
        border: 1px solid var(--border-glass);
        border-radius: 24px;
        box-shadow: 0 8px 32px 0 var(--pink-glow);
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        height: 100%;
    }

    .glass-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 16px 48px 0 rgba(255, 20, 147, 0.25);
        border-color: rgba(255, 20, 147, 0.4);
    }

    /* ================= BADGE ================= */
    .badge-interactive {
        background: rgba(255,255,255,0.08);
        color: #ffffff;
        font-weight: 600;
        padding: 8px 16px;
        border-radius: 999px;
        font-size: 0.7rem;
        letter-spacing: 0.08em;
        text-transform: uppercase;
    }

    /* ================= WORKFLOW ================= */
    .workflow-num {
        font-size: 0.7rem;
        background: rgba(255, 20, 147, 0.15);
        color: var(--accent-pink);
        padding: 4px 14px;
        border-radius: 999px;
        font-weight: 800;
        letter-spacing: 0.08em;
        width: fit-content;
    }

    .methodology-box {
        background:
            linear-gradient(180deg, rgba(255,20,147,0.08), rgba(0,0,0,0));
        border-left: 4px solid var(--accent-pink);
    }

    /* ================= LINK ================= */
    .estat-link {
        color: #22d3ee;
        font-weight: 600;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 6px;
        transition: 0.3s;
    }

    .estat-link:hover {
        color: #ffffff;
        text-shadow: 0 0 12px rgba(34, 211, 238, 0.6);
    }

    /* ================= DOT PULSE ================= */
    .dot-pulse {
        width: 10px;
        height: 10px;
        background-color: var(--accent-pink);
        border-radius: 50%;
        animation: pulse-pink 2s infinite;
    }

    @@keyframes pulse-pink {
        0% { box-shadow: 0 0 0 0 rgba(255,20,147,0.6); }
        70% { box-shadow: 0 0 0 12px rgba(255,20,147,0); }
        100% { box-shadow: 0 0 0 0 rgba(255,20,147,0); }
    }

    /* ================= CTA BUTTON ================= */
    .btn-spk {
        background: linear-gradient(135deg, #FF1493, #6366f1);
        color: #fff;
        border-radius: 999px;
        font-weight: 700;
        letter-spacing: 0.02em;
        border: none;
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    }

    .btn-spk:hover {
        transform: translateY(-5px);
        box-shadow: 0 12px 32px rgba(255,20,147,0.35);
        color: #fff;
    }
</style>

<div class="container py-5">

    <!-- ================= HERO ================= -->
    <div class="text-center mb-5 mt-4">
        <div class="d-inline-flex align-items-center gap-2 px-4 py-2 rounded-pill glass-card mb-4">
            <span class="dot-pulse"></span>
            <span class="text-white small fw-bold text-uppercase" style="letter-spacing:0.15em;">
                E-STAT Japan Decision Engine
            </span>
        </div>

        <h1 class="hero-title">
            <span class="white">Cerdas Memilih Karir</span><br />
            <span class="gradient">Magang di Jepang</span>
        </h1>

        <p class="text-white-50 fs-5 mx-auto mb-4" style="max-width: 820px;">
            Sistem Pendukung Keputusan yang mengombinasikan <strong>Machine Learning</strong>
            untuk analisis kesiapan personal dan <strong>Metode SAW</strong>
            untuk pengolahan Big Data Pemerintah Jepang.
        </p>

        <a href="https://www.e-stat.go.jp/en" target="_blank" class="estat-link small">
            <i class="bi bi-box-arrow-up-right"></i>
            Sumber Data: Official Statistics of Japan (e-Stat)
        </a>
    </div>

    <!-- ================= WORKFLOW ================= -->
    <div class="row g-4 mb-5 pt-4">
        <div class="col-12 d-flex align-items-center mb-3">
            <h6 class="text-white fw-bold m-0 text-uppercase" style="letter-spacing:0.15em;">
                <i class="bi bi-cpu me-2 text-pink"></i> Architecture Workflow
            </h6>
            <div class="flex-grow-1 ms-3 border-top border-white border-opacity-10"></div>
        </div>

        @{
            var steps = new[] {
                new { Icon = "shield-lock", Title = "Mental Check", Desc = "ML memprediksi kesiapan adaptasi budaya Anda." },
                new { Icon = "database-fill-down", Title = "Macro Data", Desc = "Penarikan data gaji & CPI dari 47 prefektur." },
                new { Icon = "sliders2-vertical", Title = "Preference", Desc = "Penentuan bobot kriteria berdasarkan ambisi Anda." },
                new { Icon = "trophy", Title = "Ranking", Desc = "SAW menghasilkan rekomendasi lokasi terbaik." }
            };
        }

        @for (int i = 0; i < steps.Length; i++)
        {
            <div class="col-md-3">
                <div class="glass-card p-4">
                    <div class="workflow-num mb-3">PHASE 0@(i + 1)</div>
                    <i class="bi bi-@steps[i].Icon text-white fs-2 mb-3 d-block"></i>
                    <h6 class="text-white fw-bold mb-2">@steps[i].Title</h6>
                    <p class="small text-white-50 mb-0" style="line-height:1.6;">
                        @steps[i].Desc
                    </p>
                </div>
            </div>
        }
    </div>

    <!-- ================= CONTENT ================= -->
    <div class="row g-4 mb-5">
        <div class="col-lg-7">
            <div class="glass-card p-4 p-md-5 methodology-box">
                <h3 class="text-white fw-bold mb-4">Metodologi SAW Transparan</h3>
                <p class="text-white-50 mb-4" style="text-align: justify; line-height:1.8;">
                    Berbeda dengan rekomendasi biasa, sistem kami bekerja dengan menghitung
                    <strong>Matriks Normalisasi</strong>.
                    Setiap prefektur dievaluasi berdasarkan kriteria
                    <em>Benefit</em> dan <em>Cost</em>.
                </p>

                <div class="d-flex flex-wrap gap-2">
                    <span class="badge-interactive">Benefit-Cost Analysis</span>
                    <span class="badge-interactive">ML Sentiment Analysis</span>
                    <span class="badge-interactive">Real-time Ranking</span>
                </div>
            </div>
        </div>

        <div class="col-lg-5">
            <div class="glass-card p-4 p-md-5">
                <h4 class="text-white fw-bold mb-4">Mengapa SPK Ini?</h4>

                <div class="d-flex mb-4">
                    <i class="bi bi-check2-circle text-pink fs-4 me-3"></i>
                    <div>
                        <h6 class="text-white mb-1">Objektivitas Data</h6>
                        <p class="small text-white-50">
                            Menghindari bias pemilihan hanya berdasarkan popularitas.
                        </p>
                    </div>
                </div>

                <div class="d-flex mb-4">
                    <i class="bi bi-lightning-charge text-pink fs-4 me-3"></i>
                    <div>
                        <h6 class="text-white mb-1">Proses Cepat</h6>
                        <p class="small text-white-50">
                            Mengolah ribuan baris data statistik dalam hitungan detik.
                        </p>
                    </div>
                </div>

                <div class="d-flex">
                    <i class="bi bi-eye text-pink fs-4 me-3"></i>
                    <div>
                        <h6 class="text-white mb-1">Visualisasi Interaktif</h6>
                        <p class="small text-white-50">
                            Grafik intuitif untuk mahasiswa.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- ================= CTA ================= -->
    <div class="text-center py-5">
        <a asp-controller="Assessment" asp-action="Biodata"
           class="btn-spk btn-lg px-5 py-3">
            Mulai Analisis Sekarang <i class="bi bi-rocket-takeoff ms-2"></i>
        </a>
        <p class="text-white-50 small mt-3">
            Estimasi waktu pengerjaan: 3–5 menit
        </p>
    </div>

</div>
