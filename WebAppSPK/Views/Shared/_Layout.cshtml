<!DOCTYPE html>
<html lang="en" class="h-100">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Japan Career SPK</title>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@300;400;600;800&display=swap" rel="stylesheet">
    
    <style>
        :root {
            --accent-pink: #FF1493;
            --accent-pink-hover: #db127d;
            --dark-blue: #020617;
            --glass-bg: rgba(255, 255, 255, 0.03);
            --glass-border: rgba(255, 255, 255, 0.1);
            --card-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.37);
        }

        body {
            font-family: 'Plus Jakarta Sans', sans-serif;
            background-color: var(--dark-blue);
            color: #f8fafc;
            background-image: 
                radial-gradient(circle at 10% 20%, rgba(255, 20, 147, 0.07) 0%, transparent 25%),
                radial-gradient(circle at 90% 80%, rgba(255, 20, 147, 0.07) 0%, transparent 25%);
            background-attachment: fixed;
            overflow-x: hidden;
        }

        /* --- Global Button Style (Profesional & Konsisten) --- */
        .btn-spk {
            background-color: var(--accent-pink);
            color: white;
            border: none;
            padding: 12px 28px;
            border-radius: 12px;
            font-weight: 600;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            text-transform: uppercase;
            letter-spacing: 0.5px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
        }

        .btn-spk:hover {
            background-color: var(--accent-pink-hover);
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(255, 20, 147, 0.4);
        }

        .btn-spk-outline {
            background: transparent;
            color: white;
            border: 2px solid var(--glass-border);
            padding: 12px 28px;
            border-radius: 12px;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .btn-spk-outline:hover {
            border-color: var(--accent-pink);
            background: rgba(255, 20, 147, 0.05);
            color: var(--accent-pink);
        }

        /* --- Glassmorphism Card Style --- */
        .spk-card {
            background: var(--glass-bg);
            backdrop-filter: blur(10px);
            border: 1px solid var(--glass-border);
            border-radius: 20px;
            padding: 2rem;
            box-shadow: var(--card-shadow);
            transition: transform 0.3s ease;
        }

        /* --- Form Styling --- */
        .form-control, .form-select {
            background: rgba(255, 255, 255, 0.05);
            border: 1px solid var(--glass-border);
            color: white;
            border-radius: 10px;
            padding: 12px;
        }

        .form-control:focus, .form-select:focus {
            background: rgba(255, 255, 255, 0.08);
            border-color: var(--accent-pink);
            color: white;
            box-shadow: none;
        }

        .blur-nav {
            backdrop-filter: blur(15px);
            background: rgba(2, 6, 23, 0.85);
            z-index: 1030;
        }

        .text-pink { color: var(--accent-pink) !important; }
        
        /* Scrollbar Customization */
        ::-webkit-scrollbar { width: 8px; }
        ::-webkit-scrollbar-track { background: var(--dark-blue); }
        ::-webkit-scrollbar-thumb { 
            background: rgba(255, 20, 147, 0.3); 
            border-radius: 10px; 
        }
    </style>

    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="d-flex flex-column h-100">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark sticky-top blur-nav py-3 border-bottom border-white border-opacity-10">
            <div class="container">
                <a class="navbar-brand fw-800 fs-4" asp-controller="Home" asp-action="Index">
                    <span class="text-pink"><i class="bi bi-rocket-takeoff-fill me-2"></i>JAPAN</span>CAREER
                </a>
                
                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto fw-semibold gap-2">
                        <li class="nav-item">
                            <a class="nav-link px-3 @(ViewContext.RouteData.Values["Action"]?.ToString() == "Index" && ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" ? "text-pink" : "")" 
                               asp-controller="Home" asp-action="Index">Beranda</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link px-3 @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Assessment" ? "text-pink" : "")" 
                               asp-controller="Assessment" asp-action="Biodata">Asesmen</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="flex-shrink-0">
        <div class="container py-5">
            @RenderBody()
        </div>
    </main>

    <footer class="footer mt-auto py-5 border-top border-white border-opacity-10" style="background: rgba(0,0,0,0.3)">
        <div class="container text-center">
            <div class="row">
                <div class="col-lg-6 text-lg-start mb-4 mb-lg-0">
                    <h5 class="fw-bold text-white mb-2">SPK Karir Jepang</h5>
                    <p class="text-white-50 small mb-0">Sistem cerdas berbasis Big Data & Machine Learning untuk membantu mahasiswa menentukan lokasi magang terbaik di Jepang.</p>
                </div>
                <div class="col-lg-6 text-lg-end">
                    <p class="small text-white-50 mb-2">Sumber Data Resmi: e-Stat (Portal Pemerintah Jepang)</p>
                    <div class="d-flex justify-content-lg-end justify-content-center gap-3">
                        <span class="badge rounded-pill bg-dark border border-secondary px-3 py-2">ML Engine v1.0</span>
                        <span class="badge rounded-pill bg-dark border border-secondary px-3 py-2">SAW Algorithm</span>
                    </div>
                </div>
            </div>
            <hr class="my-4 border-secondary opacity-25">
            <p class="small text-white-50 mb-0">© @DateTime.Now.Year - WebApp SPK Mahasiswa Magang</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>