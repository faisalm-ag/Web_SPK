<!DOCTYPE html>
<html lang="en" class="h-100">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - STARTJAP Assessment</title>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@300;400;600;800&display=swap" rel="stylesheet">
    
    <style>
        :root {
            --accent-pink: #FF1493;
            --accent-pink-hover: #db127d;
            --dark-blue: #020617;
            --glass-bg: rgba(255, 255, 255, 0.03);
            --glass-border: rgba(255, 255, 255, 0.1);
        }

        body {
            font-family: 'Plus Jakarta Sans', sans-serif;
            background-color: var(--dark-blue);
            color: #f8fafc;
            background-image: 
                radial-gradient(circle at 10% 20%, rgba(255, 20, 147, 0.07) 0%, transparent 25%),
                radial-gradient(circle at 90% 80%, rgba(255, 20, 147, 0.07) 0%, transparent 25%);
            background-attachment: fixed;
            overflow-x: hidden;
            padding-top: 85px; 
        }

        /* --- Navbar Fixed --- */
        .blur-nav {
            backdrop-filter: blur(15px);
            background: rgba(2, 6, 23, 0.85);
            z-index: 1030;
            transition: all 0.3s ease;
        }

        .navbar-brand {
            display: flex;
            align-items: center;
            gap: 12px;
            letter-spacing: 1px;
        }

        .brand-logo {
            width: 35px;
            height: 35px;
            object-fit: contain;
            filter: drop-shadow(0 0 5px rgba(255, 20, 147, 0.4));
        }

        .text-pink { color: var(--accent-pink) !important; }

        /* --- Global Button Style --- */
        .btn-spk {
            background-color: var(--accent-pink);
            color: white;
            border: none;
            padding: 10px 24px;
            border-radius: 10px;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .btn-spk:hover {
            background-color: var(--accent-pink-hover);
            transform: translateY(-2px);
        }

        /* --- Footer Hover Style --- */
        .footer-link {
            text-decoration: none;
            color: rgba(255, 255, 255, 0.5) !important;
            transition: all 0.3s ease;
        }
        .footer-link:hover {
            color: var(--accent-pink) !important;
            padding-left: 5px;
        }
        
        /* Scrollbar */
        ::-webkit-scrollbar { width: 8px; }
        ::-webkit-scrollbar-track { background: var(--dark-blue); }
        ::-webkit-scrollbar-thumb { 
            background: rgba(255, 20, 147, 0.3); 
            border-radius: 10px; 
        }
    </style>

    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="d-flex flex-column h-100">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark fixed-top blur-nav py-3 border-bottom border-white border-opacity-10">
            <div class="container">
                <a class="navbar-brand fw-800 fs-4" asp-controller="Home" asp-action="Index">
                    <img src="~/images/logo-startjap.png" alt="STARTJAP Logo" class="brand-logo" />
                    <span class="text-white">START<span class="text-pink">JAP</span></span>
                </a>
                
                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto fw-semibold gap-2 text-uppercase small tracking-wider">
                        <li class="nav-item">
                            <a class="nav-link px-3 @(ViewContext.RouteData.Values["Action"]?.ToString() == "Index" && ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" ? "text-pink" : "")" 
                               asp-controller="Home" asp-action="Index">Beranda</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link px-3 @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Assessment" ? "text-pink" : "")" 
                               asp-controller="Assessment" asp-action="Biodata">Asesmen Karir</a>
                        </li>
                        @* Tautan Kebijakan Privasi di Header *@
                        <li class="nav-item">
                            <a class="nav-link px-3 @(ViewContext.RouteData.Values["Action"]?.ToString() == "Privacy" ? "text-pink" : "")" 
                               asp-controller="Home" asp-action="Privacy">Kebijakan Privasi</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="flex-shrink-0">
        <div class="container py-5">
            @RenderBody()
        </div>
    </main>

    <footer class="footer mt-auto py-5 border-top border-white border-opacity-10" style="background: rgba(0,0,0,0.4)">
        <div class="container text-center text-lg-start">
            <div class="row align-items-center">
                <div class="col-lg-5 mb-4 mb-lg-0">
                    <div class="d-flex align-items-center mb-3 justify-content-center justify-content-lg-start">
                        <img src="~/images/logo-startjap.png" alt="Logo" style="width:25px; margin-right:8px;">
                        <h5 class="fw-bold text-white mb-0">STARTJAP <span class="text-pink">Consultancy</span></h5>
                    </div>
                    <p class="text-white-50 small mb-0 pe-lg-5">
                        Solusi cerdas bimbingan karir Jepang dengan integrasi data pemerintah e-Stat dan algoritma pengambilan keputusan SAW.
                    </p>
                </div>
                <div class="col-lg-3 mb-4 mb-lg-0">
                    <h6 class="text-white fw-bold mb-3">Navigasi</h6>
                    <ul class="list-unstyled small">
                        <li class="mb-2"><a asp-controller="Home" asp-action="Index" class="footer-link">Beranda</a></li>
                        <li class="mb-2"><a asp-controller="Assessment" asp-action="Biodata" class="footer-link">Mulai Asesmen</a></li>
                        <li class="mb-2"><a asp-controller="Home" asp-action="Privacy" class="footer-link">Kebijakan Privasi</a></li>
                    </ul>
                </div>
                <div class="col-lg-4 text-lg-end">
                    <p class="small text-white-50 mb-3">Teknologi Assessment</p>
                    <div class="d-flex justify-content-lg-end justify-content-center gap-2">
                        <span class="badge rounded-pill bg-dark border border-white border-opacity-10 px-3 py-2 small">DSS Engine</span>
                        <span class="badge rounded-pill px-3 py-2 small" style="background: linear-gradient(45deg, #FF1493, #6366f1)">SAW Method</span>
                    </div>
                </div>
            </div>
            <hr class="my-4 border-secondary opacity-25">
            <div class="d-flex flex-column flex-lg-row justify-content-between align-items-center gap-3">
                <p class="small text-white-50 mb-0">© @DateTime.Now.Year <span class="fw-bold">STARTJAP</span>. All rights reserved.</p>
                <div class="small text-white-50">
                    <span class="me-3"><i class="bi bi-shield-check me-1"></i>Data Terproteksi</span>
                    <span><i class="bi bi-globe-americas me-1"></i>Integrasi e-Stat Japan</span>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>